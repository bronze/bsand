<div class="container max-w-screen-lg mx-auto">
  <h1 class="text-5xl roboto">Posts</h1>
  <div class="flex flex-col space-y-8 mt-8 px-8 lg:px-0">
  {% for post in postslist | reverse %}
    <article class="bg-gray-200 p-8 drop-shadow-md relative isolate flex flex-col gap-8 lg:flex-row postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <div class="relative aspect-[2/1] lg:h-36 lg:shrink-0">
        {% image "BS_YT_Weekly-Update_08-01-23_V1.png", "Test", [300, 600], "(max-width: 500px) 300px, 600px", "absolute inset-0 h-full w-full rounded-2xl bg-grey-50 object-cover" %}
        <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
      </div>
      <div >
        <div class="flex items-center gap-4 text-xs">
          <time class="postlist-date text-gray-500" datetime="{{ post.date | dateToFormat('yyyy-MM-dd') }}">{{ post.date | dateToFormat('LLL dd yyyy') }}</time>
          {% for tag in post.data.tags | filterTagList %}
            {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
            <span href="{{ tagUrl | url }}" class="post-tag relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600">{{ tag }}</span>
          {% endfor %}

        </div>
        <div class="relative max-w-xl">
          <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 brn">
            <a href="{{ post.url | url }}" >
            <span class="inset-0 absolute"></span>
            {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
            </a>
          </h3>
          <p class="inset-0 text-sm leading-6 axs text-gray-600">
            {{ post.data.description }}
          </p>
        </div>
